<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="48dp"

    tools:context="kr.co.plani.fitlab.tripko.Dialog.AIProgressDialog">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:id="@+id/icon_container"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/image_person"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_think" />

        <ImageView
            android:id="@+id/image_progress"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_above="@+id/image_person"
            android:layout_toRightOf="@+id/image_person"
            android:src="@drawable/ic_settings_white" />
    </RelativeLayout>

    <TextView
        android:id="@+id/text_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/icon_container"
        android:layout_centerHorizontal="true"
        android:text="TripKo가 경로를 학습중입니다"
        android:textColor="@color/white"
        android:textStyle="bold" />
</RelativeLayout>
